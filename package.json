{
  "name": "@bennykim/mbl",
  "version": "0.1.0-RC1",
  "description": "Setting up a simple esbuild-based bundle for React",
  "scripts": {
    "compile:swc": "swc esbuild -d out",
    "compile:tsc": "tsc -p ./tsconfig.cjs.json --diagnostics && tsc -p ./tsconfig.esm.json --diagnostics",
    "dev": "yarn compile:swc && node out/main --serve",
    "build": "yarn compile:swc && node out/main --build",
    "bundle": "yarn compile:tsc"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "esbuild": "^0.19.9",
    "esbuild-plugin-alias-path": "^2.0.2",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "main": "bundle/cjs/main.js",
  "module": "bundle/esm/main.js",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennykim/mniii-bundle-lite.git"
  },
  "homepage": "https://github.com/bennykim/mniii-bundle-lite#readme"
}
